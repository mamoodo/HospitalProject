@model features.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $("#symptoms__title").css({ "font-size": "24px", "color": "#0D467D", "font-weight": "bold" });
        $('.event__Title').css({ 'font-size': '10px', "color": "#0D467D" });
    });
</script>

<div class="container" style="margin-top: 150px; margin-bottom: 100px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="max-width: 500px;">
            <h4 id="symptoms__title">Edit Department</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.departmentsId)

            <div class="form-group">
                <p class="event__Title">
                    @Html.LabelFor(model => model.dptName, htmlAttributes: new { @class = "control-label col-md-2" })
                    </p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dptName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dptName, "", new { @class = "text-danger" })
                    </div>
</div>

            <div class="form-group">
                <p class="event__Title">
                    @Html.LabelFor(model => model.dptDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                </p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dptDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dptDesc, "", new { @class = "text-danger" })
                    </div>
</div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update Dept." class="btn button-edit" />
                </div>
            </div>
        </div>
    }

    <div class="button">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
