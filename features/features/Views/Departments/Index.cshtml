@model IEnumerable<features.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $("#symptoms__title").css({ "font-size": "24px", "color": "#0D467D", "font-weight": "bold", "margin-bottom": "60px", "border-bottom": "1px solid #0D467D" });

    });
</script>

<div class="container" style="margin-top: 200px;">
    <h1 id="symptoms__title">Departments Page</h1>

    <p class="button">
        @Html.ActionLink("Add Department", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dptName)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@Html.DisplayFor(modelItem => item.dptName).ToString(), "Details", new { id = item.departmentsId })
                </td>
                <td class="crud">
                    @Html.ActionLink("Edit", "Edit", new { id = item.departmentsId }, htmlAttributes: new { @class = "button-edit" })
                </td>
                <td class="crud">
                    @Html.ActionLink("Delete", "Delete", new { id = item.departmentsId }, htmlAttributes: new { @class = "button-delete" })
                </td>
            </tr>
        }

    </table>
</div>
