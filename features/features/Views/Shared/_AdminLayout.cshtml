
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" />
    <!-- Note (kelly mcnamara): the below is from: https://forums.asp.net/t/2026059.aspx?How+to+add+Rich+Text+Controls+to+textbox+in+asp+net+MVC 
        Note (kelly mcnamara): I also had to add the NuGet Package for TinyMCE-->
    <!-- Note (kelly mcnamara): TinyMCE Script Reference -->
    <script src="~/scripts/tinymce/tinymce.min.js"></script>
    <!-- Note (kelly mcnamara): Script to wire up your TinyMCE editor -->
    <script type="text/javascript">
        // Note (kelly mcnamara): Initialize your tinyMCE Editor with your preferred options
        tinyMCE.init({
            // Note (kelly mcnamara): General options
            mode: "specific_textareas",
            editor_selector: "richTextEditor",
            //plugins: "a11ychecker",
            //toolbar: "a11ycheck",
            height: 300,
            theme: "modern",
            //toolbar1: 'undo redo | styleselect | bold italic | forecolor backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link',
            // Theme options
            theme_advanced_buttons1: "save,newdocument,|,bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,styleselect,formatselect,fontselect,fontsizeselect",
            theme_advanced_buttons2: "cut,copy,paste,pastetext,pasteword,|,search,replace,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,cleanup,help,code,|,insertdate,inserttime,preview,|,forecolor,backcolor",
            theme_advanced_buttons3: "tablecontrols,|,hr,removeformat,visualaid,|,sub,sup,|,charmap,emotions,iespell,media,advhr,|,print,|,ltr,rtl,|,fullscreen",
            theme_advanced_buttons4: "insertlayer,moveforward,movebackward,absolute,|,styleprops,spellchecker,|,cite,abbr,acronym,del,ins,attribs,|,visualchars,nonbreaking,template,blockquote,pagebreak,|,insertfile,insertimage",
            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            theme_advanced_statusbar_location: "bottom",
            theme_advanced_resizing: true,

            // Example content CSS (should be your site CSS)
            content_css: "~/Content/admin.css",
        });
    </script>

</head>
<body>
    @if (IsSectionDefined("Login"))
    {
        @RenderSection("Login")
    }
    else
    {
        <div class="navbar navbar-fixed-top">
            <div class="">
                <div class="navbar-header col-md-12 col-sm-12 col-12">
                    <div class="row">
                        <div class="col-md-2 col-sm-2 col-3">
                            <a href="#">
                                <img src="~/Content/opt-imgs/petabyte-h-logo.png" class="nav-logo" />
                            </a>
                        </div>
                        <div class="text-right col-md-10 col-sm-10 col-9 dash-link">
                            <a href="#">Head Back to your Dashboard</a>
                        </div>
                    </div>
                </div>
                <!--end of desktop menu-->
                <div class="navbar-collapse">
                    <div class="row">
                        <div class="col-md-2 col-sm-2 col-3">
                            <a href="#">
                                <img src="~/Content/opt-imgs/petabyte-h-logo.png" class="nav-logo" />
                            </a>
                        </div>
                        <div class="text-right col-md-10 col-sm-10 col-9">
                            <a href="#" class="dashboard-link">Head Back to your Dashboard</a>
                        </div>
                    </div>
                </div>
                <!--end of mobile menu-->
            </div>
        </div>
    }
    <div class="">
        <div class="wrapper">
            @RenderBody()
        </div>
        <div id="footer">
            <div class="wrapper row">
                
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>